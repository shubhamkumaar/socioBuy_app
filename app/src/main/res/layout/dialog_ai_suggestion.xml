<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:backgroundTint="@color/background"
    app:cardCornerRadius="28dp"
    app:cardElevation="16dp"
    app:cardBackgroundColor="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="15dp">

        <!-- âŒ Close Button -->
        <ImageView
            android:id="@+id/btn_close_dialog"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close"
            android:padding="4dp"
            android:src="@drawable/ic_back"
            app:tint="@color/primaryButton" />

        <!-- ðŸ¤– Medium Size Robot -->

        <!-- Divider -->
        <!--        <View-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="1dp"-->
        <!--            android:layout_marginBottom="12dp"-->
        <!--            android:background="@color/divider" />-->

        <!-- ðŸ’¬ Suggestion Scroll Section (just below robot) -->

        <!-- âœ… OK Button -->

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/cart_lottie_anim"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:baselineAligned="false"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/sparkle" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- ðŸ’¬ Suggestions injected dynamically -->
                <LinearLayout
                    android:id="@+id/ai_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp" />

                <!-- âœ… Got it Button at bottom of scroll -->
                <Button
                    android:id="@+id/btn_ai_ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_generate_button"
                    android:backgroundTint="@color/primaryButton"
                    android:fontFamily="@font/metropolis_semibold"
                    android:text="Got it!"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </ScrollView>

        <!--        <Button-->
        <!--            android:id="@+id/btn_ai_ok"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="Got it!"-->
        <!--            android:textAllCaps="true"-->
        <!--            android:textColor="@android:color/white"-->
        <!--            android:fontFamily="@font/metropolis_semibold"-->
        <!--            android:background="@drawable/bg_generate_button"-->
        <!--            android:backgroundTint="@color/primaryButton" />-->
    </LinearLayout>
</androidx.cardview.widget.CardView>
